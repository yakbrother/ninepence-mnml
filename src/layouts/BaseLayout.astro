---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
export interface Props {
  title?: string;
}
const { title = 'virgil eaton' } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | mostly true</title>
    <link rel="preload" href="/fonts/arvo-regular.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="/fonts/arvo-bold.woff2" as="font" type="font/woff2" crossorigin>
  </head>
  <body>
    <Header />
    <main class="content">
      <slot />
    </main>
    <Footer />
  </body>
</html> 