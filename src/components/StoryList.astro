---
export interface Props {
  stories: any[];
}
const { stories } = Astro.props;
---
{stories.map(story => (
  <div class="post">
    <div class="post-date">{new Date(story.data.date).toLocaleString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' })}</div>
    <div class="post-title">
      <a href={`/stories/${story.id}/`}>{story.data.title}</a>
      <a href={`/stories/${story.id}/`} class="permalink" title="Permalink to this story">
        <img src="/spiral.svg" alt="permalink" style="width:1em;height:1em;vertical-align:middle;margin-left:0.3em;" />
      </a>
    </div>
    <div class="post-summary">{story.data.description}</div>
  </div>
))} 