---
const { pathname } = Astro.url;
const navLinks = [
  { href: '/', label: 'home' },
  { href: '/about', label: 'about' },
  { href: '/now', label: 'now' },
  { href: '/newsletter', label: 'newsletter' },
  { href: '/links', label: 'links' },
  { href: '/rss.xml', label: 'rss' },
];
---
<header class="masthead">
  <a href="/" aria-label="Home page">
    <img src="/assets/mostlytrue.png" alt="Mostly True - Virgil Eaton's personal blog" />
  </a>
  <h1>mostly true</h1>
  <div class="subtitle">stories from life</div>
  <nav class="main-nav" aria-label="Main navigation">
    {navLinks.map(link =>
      pathname === link.href || (link.href !== '/' && pathname.startsWith(link.href)) ?
        <span class="active" aria-current="page">{link.label}</span> :
        <a href={link.href}>{link.label}</a>
    )}
  </nav>
  <img src="/44.png" width="600" alt="" aria-hidden="true" style="display: block; margin: 1.5rem auto 0 auto; opacity: 0.7; max-width: 600px;" />
</header> 